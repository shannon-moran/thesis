number = {4},
pages = {042601},
pmid = {22790505},
title = {{Diffusive transport without detailed balance in motile bacteria: does microbiology need statistical physics?}},
url = {http://stacks.iop.org/0034-4885/75/i=4/a=042601},
volume = {75},
year = {2012}
}
